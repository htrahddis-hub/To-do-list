<%- include("header") -%>

  <div class="box topbox" id="heading">
    <h1 > <%= Todaydate %> </h1>
    <h2><%= listTitle %></h2>
  </div>
  <div class="dropdown">
    <button class="dropbtn">more..</button>
    <div class="dropdown-content">
      <a href="/">General</a>
      <% for (let i=0; i<lists.length; i++) { %>
        <a href="/<%= lists[i].name %>"><%=  lists[i].name  %></a>
      <% } %>
      <form action="/new/List" method="post">
        <input style="background-color: white;" type="text" name="newList" placeholder="New list name" autocomplete="off">
        <button class='create' type="submit">Create</button>
      </form>
    </div>
  </div>
  <form action="/delete/list" method="post">
    <button class="delete" type="submit" name="list" value="<%= listTitle %>">-</button>
  </form>
  

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input class="item-check" type="checkbox" name="checkbox" value="<%=newListItems[i]._id%>" onchange="this.form.submit()">
          <p><%=  newListItems[i].name  %></p>
          <input type="hidden" name="listTitle" value="<%= listTitle %>">
        </div>
      </form>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
